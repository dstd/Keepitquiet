<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/default_background"
        android:elevation="4dp"
        android:text="@string/app_name"
        />

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="24dp"
        android:layout_gravity="center"
        android:background="@color/default_background"
        android:elevation="10dp"
        >
        <CheckBox
            android:id="@+id/volumeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/target_volume_level"
            />
        <SeekBar
            android:id="@+id/volumeLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/volumeTitle"
            android:layout_marginTop="4dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/volumePercent"
            />
        <TextView
            android:id="@+id/volumePercent"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:minHeight="40sp"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/volumeLevel"
            android:gravity="center"
            style="@style/Theme.EditText"
            tools:text="100%"
            />
        <Button
            android:id="@+id/takeCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/volumePercent"
            android:layout_alignStart="@+id/volumeLevel"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:text="@string/take_current_volume_level"
            />
        </RelativeLayout>
</FrameLayout>